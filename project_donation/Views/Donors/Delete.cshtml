@model project_donation.Models.Donor.Donor
@{
    ViewData["Title"] = "Delete Donor";
}

<h3>¿Estás seguro de que quieres eliminar este donante?</h3>

<form asp-action="Delete">
    <input type="hidden" asp-for="id_donor" />

    <div class="form-group">
        <label asp-for="name_donor" class="control-label">Nombre</label>
        <input asp-for="name_donor" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="email_donor" class="control-label">Email</label>
        <input asp-for="email_donor" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="phone_donor" class="control-label">Teléfono</label>
        <input asp-for="phone_donor" class="form-control" readonly />
    </div>
    <h4></h4>

    <div class="form-group">
        <input type="submit" value="Eliminate" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
<h4></h4>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>