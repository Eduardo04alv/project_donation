@model project_donation.Models.Beneficiarie.Beneficiarie
@{
    ViewData["Title"] = "Add Beneficiary";
}

<div class="text-center">
    <h1 class="display-4">Add a New Beneficiary</h1>
</div>

<form asp-controller="Beneficiaries" asp-action="Create" method="post">
    <div class="row col-md-12">

        <div class="form-group col-md-4">
            <label asp-for="name_Benefi"></label>
            <input asp-for="name_Benefi" class="form-control" />
            <span asp-validation-for="name_Benefi" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="phone_Benefi"></label>
            <input asp-for="phone_Benefi" type="tel" class="form-control" />
            <span asp-validation-for="phone_Benefi" class="text-danger"></span>
        </div>

    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>